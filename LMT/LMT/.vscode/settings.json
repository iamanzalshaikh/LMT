{
  // ✅ Ignore backend and node_modules to stop TS analyzer spam
  "typescript.tsserver.exclude": [
    "**/node_modules",
    "backend/**",
    "frontend/**/dist",
    "frontend/**/build"
  ],
  "files.watcherExclude": {
    "**/node_modules": true,
    "backend/**": true,
    "frontend/**/dist": true,
    "frontend/**/build": true
  },

  // ✅ Force Prettier only as formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",

  // ✅ Apply Prettier for all JS/TS
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ✅ Silence TypeScript server logs/notifications
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.log": "off"
}
